{
  "scripts": {
    "lint": "eslint '*/**/*.js'",
    "test": "jest"
  },
  "dependencies": {
    "jest": "^23.6.0"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "prettier": "^1.15.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "extends": [
      "plugin:prettier/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  }
}
